<div class="col-md-6 push-md-2">
    <div class="ff-sortbox products-sort-order row sort-by-row">
        <span class="col-sm-4 col-md-4 hidden-sm-down sort-by">{l s='Sort by:' d='Shop.Theme.Global'}</span>
        <div class="col-xs-8 col-sm-8 col-md-8 products-sort-order dropdown">
            <ff-sortbox collapse-onblur="true" show-selected="true" unresolved>
                <ff-sortbox-item key="ff.relevance">
                    {l s='Relevance' mod='factfinder'}
                    <i class="material-icons float-xs-right">&#xE5C5;</i>
                </ff-sortbox-item>

                <ff-sortbox-item key="Name.asc">
                    {l s='Name: ascending' mod='factfinder'}
                    <i class="material-icons float-xs-right">&#xE5C5;</i>
                </ff-sortbox-item>

                <ff-sortbox-item key="Name.desc">
                    {l s='Name: descending' mod='factfinder'}
                    <i class="material-icons float-xs-right">&#xE5C5;</i>
                </ff-sortbox-item>

                <ff-sortbox-item key="Price.asc">
                    {l s='Price: ascending' mod='factfinder'}
                    <i class="material-icons float-xs-right">&#xE5C5;</i>
                </ff-sortbox-item>

                <ff-sortbox-item key="Price.desc">
                    {l s='Price: descending' mod='factfinder'}
                    <i class="material-icons float-xs-right">&#xE5C5;</i>
                </ff-sortbox-item>
            </ff-sortbox>
        </div>
    </div>
</div>
